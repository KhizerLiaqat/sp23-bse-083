      <div class="p-3">
        <h4>Admin Panel</h4>
      </div>
      <ul class="nav flex-column p-2">
        <li class="nav-item">
          <a class="nav-link text-dark active" href="/admin/products">Dashboards</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-dark" href="/admin/products">Products</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-dark" href="/">Visit Main Site</a>
        </li>
      </ul>
    </div>

    <div class="flex-grow-1 height: 100%">
      <header>
        <nav class="navbar navbar-expand-lg bg-white">
          <div class="container-fluid">
            <a class="navbar-brand" href="#">The Note</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
